<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/login.css">
     <script src="/javascripts/script.js"></script>
    <title>Document</title>
</head>
<body class="">
  <%- include('./layouts/mainLayout',{userOption : 'Signup',link:'/signup',loggedin:false}) %>
  <form action="/login/authenticate-login" method="post" class="flx-col " id="login-form">
    <h5>Login</h5>

    <label for="email">Email</label>
    <input type="text" required placeholder="Email" name="email" id="email">

    <label for="password">Password</label>
    <input type="password" required placeholder="Password" name="password" id="password">

    <button type="submit">Log In</button>
    <div class="social ">
      <div class="go"> Google</div>
      <div class="fb"> Github</div>
    </div>
    <% if(message) { %>
    <h4 class="err flx-col flx-center-h"><%= message %></h4>
    <% } %>
  </form>
  
</body>
</html>